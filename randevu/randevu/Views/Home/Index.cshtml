@model randevu.Models.LoginModel
@{
    ViewBag.Title = "Index";
    
}

<body style="background-image: url('/image/p.jpg');background-repeat: no-repeat;background-attachment: fixed;background-size: cover;">
    <div style="text-align: center;margin-top: 200px;">
        @Html.ValidationSummary()

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <form>
                <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />

                <div class="form-group">

           
                    <div style="width: 500px;height: 50px;margin-left: 500px;" class="form-group">@Html.TextBoxFor(i => i.Username, new { @class = "form-control", placeholder = "UserName", })</div> 
                </div>

                <div  class="form-group" >


                    
                   <div style="width: 500px;height: 50px;margin-left: 500px;" class="form-group"> @Html.PasswordFor(i => i.Password, new { @class = "form-control", placeholder = "Password"})</div>
                
                </div>


                <br><br>
                <div style="margin-left: 400px;">
                    <button type="submit" class="btn btn-outline-danger">Giriş yap</button>
                    <a href="/Account/Register">
                        <button type="button" class="btn btn-outline-danger">Üye Ol</button>
                    </a>
                    <a href="/Admin/AdminLogin">
                        <button type="button" class="btn btn-outline-danger">Kuaför olarak giriş yap</button>
                    </a>
                </div>
            </form>
        }

    </div>
</body>

