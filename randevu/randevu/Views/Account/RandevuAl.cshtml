@using Microsoft.AspNet.Identity;
@model randevu.Models.RandevuAl

@{
    ViewBag.Title = "RandevuAl";
    bool hour = new bool();
    bool hour2 = new bool();
    bool hour3 = new bool();
    bool hour4 = new bool();
    bool hour5 = new bool();
    bool hour6 = new bool();
    bool hour7 = new bool();
    bool hour8 = new bool();
    bool hour9 = new bool();
    bool hour10 = new bool();

    var kullanicilar = new List<randevu.Identity.ApplicationUser>();

    kullanicilar = ViewBag.Kullanicilar;

    //user = kullanicilar.Where(i => i.UserName == User.Identity.Name).ToList();
}



<body>
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>

        <html lang="en">
        <head>
            <title>Bootstrap Example</title>
            <meta charset="utf-8">
            <meta name="viewport" content="width=device-width, initial-scale=1">
            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
            <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
        </head>
        <body>

            <!-- Button trigger modal -->
            <h1 style="font-family: Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif;margin-left: 400px;">Mehtap Kuaför</h1>

            @foreach (var item in kullanicilar.Where(i => i.Id == User.Identity.GetUserId()))
            {
                if (item.Salon != "Mehtap")
                {
                    <button style="margin-left: 300px;" type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">
                        Randevu için tıklayınız
                    </button>
                }
                else
                {
                    <table style="width: 50%; margin-left: auto; margin-right: auto;" border="1">
                        <tr>
                            <th>Mevcut Randevunuz</th>
                            <th>Randevu</th>
                            <th>Saat</th>
                            <th>Notunuz</th>
                            <th></th>
                        </tr>
                        <tr>
                            <th>@item.Salon</th>
                            <th>@item.Randevu</th>
                            <th>@item.Saat</th>
                            <th>@item.Text</th>
                            <th class="p-1.5 mb-1 bg-primary text-white text-center" ><a href="/Account/Delete" class="text-white">İptal</a></th>

                        </tr>
                    </table>
                  
                }
            }


            <!-- Modal -->
            <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header">

                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>



                            @foreach (var kullanici in ViewBag.Kullanicilar as List<randevu.Identity.ApplicationUser>)
                            {

                                if (kullanici.Saat == "12:00")
                                {
                                    hour = true;
                                }
                                if (kullanici.Saat == "12:30")
                                {
                                    hour2 = true;
                                }
                                if (kullanici.Saat == "13:00")
                                {
                                    hour3 = true;
                                }
                                if (kullanici.Saat == "13:30")
                                {
                                    hour4 = true;
                                }
                                if (kullanici.Saat == "14:00")
                                {
                                    hour5 = true;
                                }
                                if (kullanici.Saat == "14:30")
                                {
                                    hour6 = true;
                                }
                                if (kullanici.Saat == "15:00")
                                {
                                    hour7 = true;
                                }
                                if (kullanici.Saat == "15:30")
                                {
                                    hour8 = true;
                                }
                                if (kullanici.Saat == "16:00")
                                {
                                    hour9 = true;
                                }
                                if (kullanici.Saat == "16:30")
                                {
                                    hour10 = true;
                                }

                            }



                            @using (Html.BeginForm())
                            {

                                @Html.AntiForgeryToken()
                                <div class="modal-body">

                                    <form>

                                        <div class="form-group">
                                            <h3>Hangi konuda size yardımcı olalım?</h3>
                                            <form action="/action_page.php">

                                                @Html.CheckBox("SacKesim", false)
                                                <label for="vehicle1"> Saç kesimi(50tl) </label><br>

                                                @Html.CheckBox("Fon", false)
                                                <label for="vehicle2"> Fön(30tl) </label><br>

                                                @Html.CheckBox("Agda", false)
                                                <label for="vehicle3"> Ağda(60tl) </label><br>

                                                @Html.CheckBox("KasAlım", false)
                                                <label for="vehicle2"> Kaş alımı(20tl) </label><br>

                                            </form>

                                        </div>
                                        <div class="form-group">

                                            <h3>Lütfen saat seçiniz</h3>
                                            <select class="form-control" id="" name="@Html.NameFor(i=>i.Time)">

                                                @if (hour != true)
                                                {
                                                    <option>12:00</option>
                                                }
                                                @if (hour2 != true)
                                                {
                                                    <option>12:30</option>
                                                }
                                                @if (hour3 != true)
                                                {
                                                    <option>13:00</option>
                                                }
                                                @if (hour4 != true)
                                                {
                                                    <option>13:30</option>
                                                }
                                                @if (hour5 != true)
                                                {
                                                    <option>14:00</option>
                                                }
                                                @if (hour6 != true)
                                                {
                                                    <option>14:30</option>
                                                }
                                                @if (hour7 != true)
                                                {
                                                    <option>15:00</option>
                                                }
                                                @if (hour8 != true)
                                                {
                                                    <option>15:30</option>
                                                }
                                                @if (hour9 != true)
                                                {
                                                    <option>16:00</option>
                                                }
                                                @if (hour10 != true)
                                                {
                                                    <option>16:30</option>
                                                }

                                            </select>
                                        </div>
                                        <h4>Notunuzu buraya ekleyebilirsiniz</h4>
                                        <div class="form-group">
                                            <label for="exampleFormControlTextarea1"></label>
                                            @Html.TextAreaFor(i => i.Text, new { @class = "form-group", })

                                        </div>


                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                            <button type="submit" class="btn btn-primary">Randevu oluştur</button>
                                        </div>
                                    </form>
                                </div>


                            }
                        </div>


                    </div>
                </div>
            </div>
            <div class="container">
                <h1>Salondan görüntüler</h1>
                <div id="myCarousel" class="carousel slide" data-ride="carousel">
                    <!-- Indicators -->
                    <ol class="carousel-indicators">
                        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                        <li data-target="#myCarousel" data-slide-to="1"></li>
                        <li data-target="#myCarousel" data-slide-to="2"></li>
                    </ol>

                    <!-- Wrapper for slides -->
                    <div class="carousel-inner">
                        <div class="item active">
                            <img src="/images/foto1.jpg" alt="Los Angeles" style="width:70%;">
                        </div>

                        <div class="item">
                            <img src="/images/foto2.jpg" alt="Chicago" style="width:70%;">
                        </div>

                        <div class="item">
                            <img src="/images/foto3.jpg" alt="New york" style="width:70%;">
                        </div>
                    </div>

                    <!-- Left and right controls -->
                    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#myCarousel" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>

        </body>

